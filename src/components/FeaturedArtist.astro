      <div
        class="relative h-full bg-white rounded-2xl overflow-hidden shadow-[0_20px_60px_-10px_rgba(219,39,119,0.2)] border border-pink-100 transform transition-all duration-500 hover:shadow-[0_20px_70px_-10px_rgba(219,39,119,0.4)] hover:-translate-y-2"
      >
        <div
          class="absolute top-0 right-0 w-32 h-32 -mr-16 -mt-16 bg-gradient-to-bl from-pink-500/10 to-rose-500/10 rounded-full"
        >
        </div>
        <div
          class="absolute top-0 right-0 w-20 h-20 -mr-10 -mt-10 bg-gradient-to-bl from-pink-500/10 to-rose-500/10 rounded-full"
        >
        </div>

        <div class="pt-6 px-6">
          <div
            class="relative overflow-hidden rounded-xl aspect-[4/5] shadow-lg"
          >
            <img
              src={inder.src}
              alt="Inder Sahani"
              class="w-full h-full object-cover bg-pink-200"
            />
            <div
              class="absolute top-4 right-4 w-12 h-12 border-2 border-white/30 rounded-full flex items-center justify-center rotate-12 opacity-80"
            >
              <svg
                class="w-6 h-6 text-white"
